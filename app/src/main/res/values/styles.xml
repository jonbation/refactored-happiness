        <item name="android:colorBackground">?attr/colorSurface</item>

        <item name="item_head_state_done_color">@color/green_200</item>
        <item name="item_head_state_todo_color">@color/red_200</item>
        <item name="item_head_state_unknown_color">@color/blue_200</item>
