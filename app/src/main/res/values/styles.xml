    <!-- Note fragment. -->

    <style name="BorderlessButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="NoteFragmentTextContainer" parent="@style/Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/screen_edge_minus_4dp</item>
        <item name="android:layout_marginEnd">@dimen/screen_edge_minus_4dp</item>
        <item name="android:freezesText">true</item>
    </style>

    <style name="NoteFragmentMetadataHeaderContainer" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="NoteFragmentMetadataItemContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/screen_edge</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="NoteFragmentMetadataItemValueButton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/fragment_note_field_min_width</item>
        <item name="android:layout_marginStart">@dimen/fragment_note_icon_margin</item>
        <item name="android:focusable">true</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:background">@null</item>
    </style>

    <style name="NoteFragmentMetadataItemButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="BookItemInfoIcon">
        <item name="android:layout_width">?attr/item_book_info_icon_size</item>
        <item name="android:layout_height">?attr/item_book_info_icon_size</item>
        <!--<item name="android:paddingTop">1dp</item>-->

        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="FastScroll">
        <!-- Defined in values-v21/style.xml to be able to use attributes in drawables. -->
    </style>

    <style name="ListViewItem">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingStart">@dimen/screen_edge</item>
        <item name="android:paddingEnd">@dimen/screen_edge</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="BigCenteredText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/screen_edge</item>
        <item name="android:paddingBottom">?attr/actionBarSize</item>

        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>

        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleLarge</item>
    </style>

    <style name="LoadingProgressBar">
        <item name="android:indeterminate">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="WhatsNewNotice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="WhatsNewVersion">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="WhatsNewChange">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DrawerNavigationView">
        <item name="android:ellipsize">end</item>
    </style>

    <style name="QuickBarButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CoordinatorLayoutFitsSystemWindows">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <!-- To avoid messed up graphics on some older devices -->
        <item name="android:background">?android:colorBackground</item>

        <!-- For FAB not to overlap with navigation bar -->
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="AppBarLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <!-- For top toolbar not to overlap with status bar -->
        <item name="android:fitsSystemWindows">true</item>

        <item name="liftOnScroll">false</item>
    </style>

    <style name="TopToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="BottomToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/screen_edge</item>
        <item name="fabCradleRoundedCornerRadius">0dp</item>
        <item name="fabCradleVerticalOffset">0dp</item>
    </style>

    <style name="Fab.Done">
        <item name="android:src">@drawable/ic_done</item>
    </style>

    <style name="Fab.Add">
        <item name="android:src">@drawable/ic_add</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?colorTertiaryContainer</item>
    </style>

    <style name="VerticalDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?colorTertiaryContainer</item>
    </style>

    <style name="TitleTextAppearance">
        <item name="android:textSize">?attr/font_large</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- For dialogs in Settings -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.Material3.Dialog">
