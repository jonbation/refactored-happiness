<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ViewFlipper
        android:id="@+id/view_flipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="?attr/actionBarSize"
            android:clipToPadding="false"
            android:scrollbarStyle="outsideOverlay">

            <!-- Entire note -->
            <LinearLayout
                android:id="@+id/note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Breadcrumbs and title -->
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/top_toolbar_bg_color"
                    android:elevation="1dp" tools:targetApi="lollipop"
                    app:contentInsetLeft="@dimen/screen_edge"
                    app:contentInsetStart="@dimen/screen_edge"
                    app:contentInsetRight="@dimen/screen_edge"
                    app:contentInsetEnd="@dimen/screen_edge"
                    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.ActionBar">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp">

                        <!-- Breadcrumbs -->
                        <FrameLayout
                            android:id="@+id/breadcrumbs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:scrollbars="none"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/breadcrumbs_text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:linksClickable="true"
                                android:textColor="?attr/text_primary_color"
                                android:textColorLink="?attr/text_primary_color"
                                android:textSize="?attr/fragment_note_content_text_size"
                                android:lineSpacingMultiplier="1.25"
                                tools:text="@string/breadcrumbs_sample" />
                        </FrameLayout>

                        <!-- Selectable notebook -->
                        <TextView
                            android:id="@+id/location_button"
                            style="@style/NoteFragmentListItemSpinnerButton"
                            android:layout_width="match_parent"
                            android:textSize="?attr/fragment_note_content_text_size"
                            tools:text="GTD"
                            android:visibility="visible"/>

                        <!-- Title -->
                        <com.orgzly.android.ui.views.EditTextWithMarkup
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text|textCapSentences"
                            android:imeOptions="actionDone"
                            android:hint="@string/fragment_note_title_hint"
                            tools:text="@string/head_title_sample"
                            android:freezesText="true"
                            android:textSize="?attr/font_large"
                            android:visibility="visible" />

                        <com.orgzly.android.ui.views.TextViewWithMarkup
                            app:parse_checkboxes="false"
                            android:id="@+id/title_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/Widget.AppCompat.EditText"
                            android:hint="@string/fragment_note_title_hint"
                            tools:text="@string/head_title_sample"
                            android:freezesText="true"
                            android:textIsSelectable="true"
                            android:textSize="?attr/font_large"
                            android:visibility="gone" />

                    </LinearLayout>
                </androidx.appcompat.widget.Toolbar>

                <View style="@style/HorizontalDivider" />

                <!-- Metadata header -->
                <LinearLayout
                    android:id="@+id/metadata_header"
                    style="@style/NoteFragmentFullWidthButton">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/screen_edge"
                        android:layout_marginLeft="@dimen/screen_edge"
                        android:src="?attr/ic_info_outline_24dp"
                        android:alpha="?attr/active_unfocused_icon_alpha"/>

                    <TextView
                        android:id="@+id/metadata_header_text"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/screen_edge"
                        android:layout_marginStart="@dimen/screen_edge"
                        android:textSize="?attr/fragment_note_content_text_size"
                        android:textColor="?attr/text_secondary_color"
                        android:text=""/>

                    <ImageView
                        android:id="@+id/metadata_header_up_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:src="?attr/ic_keyboard_arrow_up_24dp"
                        android:alpha="?attr/active_unfocused_icon_alpha"/>

                    <ImageView
                        android:id="@+id/metadata_header_down_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:src="?attr/ic_keyboard_arrow_down_24dp"
                        android:alpha="?attr/active_unfocused_icon_alpha"
                        android:visibility="gone"/>

                </LinearLayout>

                <!-- Metadata -->
                <LinearLayout
                    android:id="@+id/metadata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/space_between_content_areas"
                    android:layout_marginStart="@dimen/screen_edge"
                    android:layout_marginLeft="@dimen/screen_edge"
                    android:layout_marginRight="4dp"
                    android:layout_marginEnd="4dp">

                    <!-- Tags. -->
                    <LinearLayout
                        android:id="@+id/tags_container"
                        style="@style/NoteFragmentListItem">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="?attr/ic_label_outline_24dp"
                            android:alpha="?attr/active_unfocused_icon_alpha"
                            android:contentDescription="@string/tags"/>

                        <MultiAutoCompleteTextView
                            android:id="@+id/tags"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padded_content_left_margin_from_icon"
                            android:layout_marginStart="@dimen/padded_content_left_margin_from_icon"
                            android:inputType="text"
                            android:hint="@string/fragment_note_tags_hint"
                            android:completionThreshold="1"
                            android:freezesText="true"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <ImageButton
                            android:id="@+id/tags_button"
                            style="@style/NoteFragmentButton"
                            android:src="?attr/ic_more_horiz_24dp" />
                    </LinearLayout>

                    <!-- State -->
                    <LinearLayout
                        android:id="@+id/state_container"
                        style="@style/NoteFragmentListItem">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="?attr/ic_flag_24dp"
                            android:alpha="?attr/active_unfocused_icon_alpha"/>
                        <TextView
                            android:id="@+id/state_button"
                            style="@style/NoteFragmentListItemSpinnerButton"
                            android:layout_marginLeft="@dimen/padded_content_left_margin_from_icon"
                            android:hint="@string/state"
                            tools:text="TODO"/>
                        <ImageButton
                            android:id="@+id/state_remove"
                            style="@style/NoteFragmentButton"
                            android:src="?attr/ic_close_24dp" />
                    </LinearLayout>

                    <!-- Priority -->
                    <LinearLayout
                        android:id="@+id/priority_container"
                        style="@style/NoteFragmentListItem">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="?attr/ic_star_border_24dp"
                            android:alpha="?attr/active_unfocused_icon_alpha"/>
                        <TextView
                            android:id="@+id/priority_button"
                            style="@style/NoteFragmentListItemSpinnerButton"
                            android:layout_marginLeft="@dimen/padded_content_left_margin_from_icon"
                            android:hint="@string/priority"
                            tools:text="Priority A"/>
                        <ImageButton
                            android:id="@+id/priority_remove"
                            style="@style/NoteFragmentButton"
                            android:src="?attr/ic_close_24dp" />
                    </LinearLayout>

                    <!-- Scheduled time -->
                    <LinearLayout
                        android:id="@+id/scheduled_time_container"
                        style="@style/NoteFragmentListItem">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="?attr/ic_today_24dp"
                            android:alpha="?attr/active_unfocused_icon_alpha"/>
                        <TextView
                            android:id="@+id/scheduled_button"
                            style="@style/NoteFragmentListItemSpinnerButton"
                            android:layout_marginLeft="@dimen/padded_content_left_margin_from_icon"
                            android:hint="@string/schedule_button_hint"/>
                        <ImageButton
                            android:id="@+id/scheduled_remove"
                            style="@style/NoteFragmentButton"
                            android:src="?attr/ic_close_24dp" />
                    </LinearLayout>

                    <!-- Deadline time -->
                    <LinearLayout
                        android:id="@+id/deadline_time_container"
                        style="@style/NoteFragmentListItem">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="?attr/ic_alarm_24dp"
                            android:alpha="?attr/active_unfocused_icon_alpha"/>
                        <TextView
                            android:id="@+id/deadline_button"
                            style="@style/NoteFragmentListItemSpinnerButton"
                            android:layout_marginLeft="@dimen/padded_content_left_margin_from_icon"
                            android:hint="@string/deadline_button_hint"
                            tools:text="@string/note_deadline_sample"/>
                        <ImageButton
                            android:id="@+id/deadline_remove"
                            style="@style/NoteFragmentButton"
                            android:src="?attr/ic_close_24dp" />
                    </LinearLayout>

                    <!-- Closed time -->
                    <LinearLayout
                        android:id="@+id/closed_time_container"
                        style="@style/NoteFragmentListItem"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="?attr/ic_outline_check_circle_24dp"
                            android:alpha="?attr/active_unfocused_icon_alpha"/>
                        <TextView
                            android:id="@+id/closed_edit_text"
                            style="@style/NoteFragmentListItemSpinnerButton"
                            android:layout_marginLeft="@dimen/padded_content_left_margin_from_icon"
                            android:hint="@string/closed_button_hint"/>
                        <ImageButton
                            android:id="@+id/closed_remove"
                            style="@style/NoteFragmentButton"
                            android:src="?attr/ic_close_24dp" />
                    </LinearLayout>

                    <!-- List of properties -->
                    <LinearLayout
                        android:id="@+id/properties_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <include layout="@layout/property"/>
                    </LinearLayout>

                </LinearLayout>

                <View style="@style/HorizontalDivider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Content header -->
                    <LinearLayout
                        android:id="@+id/content_header"
                        style="@style/NoteFragmentFullWidthButton">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/screen_edge"
                            android:layout_marginLeft="@dimen/screen_edge"
                            android:src="?attr/ic_outline_notes_24dp"
                            android:alpha="?attr/active_unfocused_icon_alpha"/>

                        <TextView
                            android:id="@+id/content_header_text"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/screen_edge"
                            android:layout_marginStart="@dimen/screen_edge"
                            android:textSize="?attr/fragment_note_content_text_size"
                            android:textColor="?attr/text_secondary_color"
                            android:text="" />

                        <ImageView
                            android:id="@+id/content_header_up_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="12dp"
                            android:src="?attr/ic_keyboard_arrow_up_24dp"
                            android:alpha="?attr/active_unfocused_icon_alpha"/>

                        <ImageView
                            android:id="@+id/content_header_down_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="12dp"
                            android:src="?attr/ic_keyboard_arrow_down_24dp"
                            android:alpha="?attr/active_unfocused_icon_alpha"
                            android:visibility="gone"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/content_views"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.orgzly.android.ui.views.EditTextWithMarkup
                            android:id="@+id/content_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/screen_edge_minus_4dp"
                            android:layout_marginStart="@dimen/screen_edge_minus_4dp"
                            android:layout_marginRight="@dimen/screen_edge_minus_4dp"
                            android:layout_marginEnd="@dimen/screen_edge_minus_4dp"
                            android:inputType="text|textCapSentences|textMultiLine"
                            android:hint="@string/content"
                            android:gravity="start|top"
                            android:freezesText="true"
                            android:textSize="?attr/fragment_note_content_text_size"
                            android:visibility="visible"  />

                        <com.orgzly.android.ui.views.TextViewWithMarkup
                            android:id="@+id/body_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/screen_edge_minus_4dp"
                            android:layout_marginStart="@dimen/screen_edge_minus_4dp"
                            android:layout_marginRight="@dimen/screen_edge_minus_4dp"
                            android:layout_marginEnd="@dimen/screen_edge_minus_4dp"
                            android:freezesText="true"
                            android:gravity="start|top"
                            style="@style/Widget.AppCompat.EditText"
                            android:textIsSelectable="true"
                            android:textSize="?attr/fragment_note_content_text_size"
                            android:hint="@string/content"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <View style="@style/HorizontalDivider" />
            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                style="@style/BigCenteredText"
                android:text="@string/note_does_not_exist_anymore" />
        </ScrollView>
    </ViewFlipper>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        style="@style/BottomAppBar.WithMenu" />

    <!--    <com.google.android.material.floatingactionbutton.FloatingActionButton-->
    <!--        android:id="@+id/fab"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:src="?attr/ic_done_24dp"-->
    <!--        app:layout_anchor="@id/bottomAppBar"-->
    <!--        app:backgroundTint="?attr/bottom_toolbar_bg_color" />-->

</androidx.coordinatorlayout.widget.CoordinatorLayout>