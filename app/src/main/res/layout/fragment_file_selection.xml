<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_file_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".android.ui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/fragment_padding"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/fragment_file_selection_browse_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/browse"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/fragment_file_selection_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:imeOptions="actionDone"/>
    </LinearLayout>
</LinearLayout>
