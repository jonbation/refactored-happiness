<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_agenda_time_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="@dimen/fragment_padding"
        android:paddingRight="@dimen/fragment_padding"
        android:layout_marginLeft="@dimen/padding_4"
        android:layout_marginStart="@dimen/padding_4"
        android:maxLines="1"
        android:textColor="?attr/item_head_title_text_color"
        android:textSize="?attr/item_head_post_title_text_size"
        android:textStyle="bold"
        tools:text="Mon, 25 Sep"/>

</LinearLayout>