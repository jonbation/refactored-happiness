<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="1dp"
        android:layout_gravity="center_vertical"
        android:background="?attr/line_color"/>

    <TextView
        android:id="@+id/item_agenda_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="@dimen/fragment_padding"
        android:paddingRight="@dimen/fragment_padding"
        android:maxLines="1"
        android:textColor="?attr/item_head_post_title_text_color"
        android:textSize="?attr/item_head_post_title_text_size"
        tools:text="Mon, 25 Sep"/>

    <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="1dp"
        android:layout_gravity="center_vertical"
        android:background="?attr/line_color"/>
</LinearLayout>