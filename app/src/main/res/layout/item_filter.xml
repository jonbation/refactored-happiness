<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/ListViewItem"
    android:gravity="center"
    android:background="?attr/item_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_filter_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="?attr/font_medium"
        android:textColor="?attr/text_primary_color"
        tools:text="@string/filter_name_sample"/>

    <TextView
        android:id="@+id/item_filter_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?attr/text_secondary_color"
        tools:text="@string/filter_query_sample_long"/>

</LinearLayout>
